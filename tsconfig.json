{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["ESNext"],
    "outDir": "dist/",
  },
  "include": ["src/**/*.ts"]
}